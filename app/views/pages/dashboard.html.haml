.row
  .col-xs-8.col-xs-offset-2
    .content-block
      .content-block__head
        %p
          %i Select services to better consume your shared email content with.

.row
  .col-xs-4.col-xs-offset-2
    .content-block
      .content-block__header
        %i.glyphicon.glyphicon-book
        Read
      .content-block__app
        .app{:class => "#{'app--active' if current_user.accounts.where(:action=> 'read', :provider => "pocket").present?}"}
          .app__icon
            = image_tag 'icon-pocket.png'
          .app__name Pocket

        .app{:class => "#{'app--active' if current_user.accounts.where(:action=> 'read', :provider => "readability").present?}"}
          .app__icon
            = image_tag 'icon-readability.png'
          .app__name Readability


  .col-xs-4
    .content-block
      .content-block__header
        %i.glyphicon.glyphicon-eye-open
          Watch
      .content-block__app
        .coming-soon

